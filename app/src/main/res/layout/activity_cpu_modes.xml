<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_app_bar"
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.omarea.common.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout style="@style/ListCardItem" android:visibility="gone">
                <LinearLayout
                    android:id="@+id/config_cfg_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Scene自带" />

                        <TextView
                            style="@style/textSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="针对处理器定制的两套调度方案" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/config_cfg_select_0"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:text="偏向省电"
                            android:textColor="?android:colorAccent" />

                        <Button
                            android:id="@+id/config_cfg_select_1"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:text="偏向性能"
                            android:textColor="?android:colorAccent" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/config_cfg_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="第三方配置" />

                        <TextView
                            style="@style/textSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="从SdCard导入或在线下载第三方配置" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/config_customer_powercfg"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:text="本地导入"
                            android:textColor="?android:colorAccent" />

                        <Button
                            android:id="@+id/config_customer_powercfg_online"
                            android:layout_width="75dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:text="在线下载"
                            android:textColor="?android:colorAccent" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cpu_mode_outside"
                style="@style/ListCardItem"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="正在使用外部配置(/data/powercfg.sh)\n如需换回Scene3自带配置，或通过Scene导入配置，请点右侧删除按钮"
                    android:textSize="13dp" />

                <ImageButton
                    android:id="@+id/cpu_mode_delete_outside"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textTitle"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="配置源/作者：" />

                    <TextView
                        android:id="@+id/config_author"
                        style="@style/textDefault"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="?android:colorAccent" />

                    <ImageButton
                        android:id="@+id/config_author_icon"
                        android:src="@drawable/source_switch"
                        android:scaleType="centerInside"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingEnd="0dp"
                        android:paddingStart="5dp"
                        android:background="@null"
                        android:tint="?android:colorAccent"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_powersave"
                        android:id="@+id/cpu_config_p0"
                        style="@style/InCardListItem"
                        android:layout_marginEnd="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:padding="6dp"
                            android:src="@drawable/mode_powersave" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/powersave" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="老年人直呼内行" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_balance"
                        android:id="@+id/cpu_config_p1"
                        style="@style/InCardListItem"
                        android:layout_marginStart="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_balance" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/balance" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="慢点 世界赏心悦目" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_performance"
                        android:layout_marginEnd="4dp"
                        android:id="@+id/cpu_config_p2"
                        style="@style/InCardListItem"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_performance" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/performance" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="玩把游戏压压惊" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/powercfg_fast"
                        android:id="@+id/cpu_config_p3"
                        android:layout_marginStart="4dp"
                        style="@style/InCardListItem"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="9dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/mode_fast" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textTitle"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/fast" />

                            <TextView
                                style="@style/textSmall"
                                android:alpha="0.6"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="快乐总是短暂的" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quick_switch"
                style="@style/ListCardItem"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/home_quick_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="快捷切换" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="在应用(Scene)首页显示四个模式的切换按钮" />
            </LinearLayout>

            <LinearLayout
                style="@style/ListCardItem">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/dynamic_control"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="动态响应" />

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="激活[场景模式]后，可根据前台应用，自动切换模式" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dynamic_control_opts"
                    android:background="@drawable/in_card_item"
                    android:padding="10dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="没有单独设置模式的应用，将默认使用此模式。\n\n如需为某个应用单独设置模式，请返回上一级页面进入“应用场景”。" />

                        <TextView
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="全局默认" />

                        <Spinner
                            android:id="@+id/first_mode"
                            style="@style/SceneSpinner"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:entries="@array/default_powercfg_mode_options"
                            android:paddingRight="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="正常情况下，Scene会尽可能的减少模式切换\n\n例如：在几个同为“省电模式”的应用之前来回切换，是不会重复运行模式切换代码的\n\n除非是你发现每次切换应用，调度参数就会被系统重置，那才需要开启这个选项~" />

                        <Switch
                            android:id="@+id/strict_mode"
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="重复执行" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingEnd="8dp">
                        <com.omarea.ui.HelpIcon
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:text="前台应用发生变化后，延迟5s再执行调度模式切换" />

                        <Switch
                            android:id="@+id/delay_switch"
                            style="@style/textTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="延迟切换" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.omarea.common.ui.OverScrollView>
</RelativeLayout>