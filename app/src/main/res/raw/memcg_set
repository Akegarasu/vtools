if [[ -d /dev/memcg ]]; then
    scene_fg="/dev/memcg/scene_fg"
elif [[ -d /sys/fs/cgroup ]]; then
    scene_fg="/sys/fs/cgroup/scene_fg"
fi

if [[ "$scene_fg" != "" ]]; then
    if [[ ! -d $scene_fg ]]; then
      mkdir $scene_fg
      echo 0 > $scene_fg/memory.swappiness
      echo 1 > $scene_fg/memory.oom_control
    fi

    pgrep -f %s | while read pid; do
        echo $pid > $scene_fg/tasks
    done
fi